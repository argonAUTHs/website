.responsive-blocks-container { 
  zoom: 1; 
}

.responsive-blocks-container:before,
.responsive-blocks-container:after { 
  content: "";
  display: table; 
}

.responsive-blocks-container:after {
  clear: both; 
}

@supports (display: flex) {
  .responsive-blocks-container::before,
  .responsive-blocks-container::after {
    content: none;
  }
  .responsive-blocks-container {
    display: flex;
    flex-wrap: wrap;
  }
}

<% for(let blockType in responsive_blocks) { %>
.responsive-block-<%= blockType %> {
  float: left;
}
<% } %>

<% for(let blockType in responsive_blocks) { %>
  <% for(let media in responsive_blocks[blockType]) { %>
    <% if(media == 'default') { %>
.responsive-block-<%= blockType %> {
  width: <%= (responsive_blocks[blockType][media]*100).toFixed(2) %>%;
}
    <% } %>
    <% if(media == 'phone') { %>
@media (min-width: <%= responsive.MEDIA.phone %>px) {
  .responsive-block-<%= blockType %> {
    width: <%= (responsive_blocks[blockType][media]*100).toFixed(2) %>%;
  }
}
    <% } %>
    <% if(media == 'tablet') { %>
@media (min-width: <%= responsive.MEDIA.tablet %>px) {
  .responsive-block-<%= blockType %> {
    width: <%= (responsive_blocks[blockType][media]*100).toFixed(2) %>%;
  }
}
    <% } %>
    <% if(media == 'laptop') { %>
@media (min-width: <%= responsive.MEDIA.laptop %>px) {
  .responsive-block-<%= blockType %> {
    width: <%= (responsive_blocks[blockType][media]*100).toFixed(2) %>%;
  }
}
    <% } %>
    <% if(media == 'desktop') { %>
@media (min-width: <%= responsive.MEDIA.desktop %>px) {
  .responsive-block-<%= blockType %> {
    width: <%= (responsive_blocks[blockType][media]*100).toFixed(2) %>%;
  }
}
    <% } %>
  <% } %>
<% } %>

